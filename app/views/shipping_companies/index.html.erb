<div id='page_title', align='center'>
<h1>Transportadoras</h1>

<% if @shipping_companies.empty? %>
  <p>Não existem transportadoras cadastradas.</p>

<% else %>
  <table id='shipping_companies', align='center'>
    <tr id='table_header'>
      <th><strong>Nome fantasia</strong></th>
      <th><strong>Razão social</strong></th>
      <th><strong>Domínio de e-mail</strong></th>
      <th><strong>CNPJ</strong></th>
      <th><strong>Endereço</strong></th>
    </tr>

    <% @shipping_companies.each do |company| %>
      <tr id=<%= company.brand_name.gsub(/\s/, '_') %>>
        <td><%= company.brand_name %></td>
        <td><%= company.corporate_name %></td>
        <td><%= company.email_domain %></td>
        <% number = company.registration_number.to_s %>
        <td><%= "#{number[0..1]}.#{number[2..4]}.#{number[5..7]}/#{number[8..11]}-#{number[12..-1]}" %></td>
        <td><%= "#{company.address} - #{company.city}/#{company.state}" %></td>
      </tr>
    <% end %>

  </table>
<% end %>
